/* components/popup-auth/popup-auth.wxss */

.popup-container {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.popup-auth {
  width: 600rpx;
  height: auto;
  background: #fff;
  border: 2rpx solid #ccc;
  border-radius: 20rpx;
  padding: 60rpx 0rpx;
  margin-top: -240rpx;
}

.auth-text {
  padding: 0rpx 40rpx;
  color: #666;
  font-size: 32rpx;
}

.btn-save {
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 40rpx;
}
